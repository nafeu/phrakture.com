{
  "editor.defaultFormatter": "dbaeumer.vscode-eslint", // Use ESLint for all files by default
  "editor.formatOnSave": true, // Optional: Format on save
  "[javascript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[typescript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "eslint.format.enable": true, // Enable ESLint formatting
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  }
}
